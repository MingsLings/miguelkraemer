<%-include('../cabecalho.ejs')%>
<section class="section">
  <div style="display:flex; align-items:end; justify-content:space-between; gap:16px; flex-wrap:wrap;">
    <div>
      <h2>Clãs</h2>
      <p>Gerencie os Clãs do Mundo Jujutsu</p>
    </div>

<form action="/cla/lst" method="get" class="search-bar" style="flex:1; max-width:380px; display:flex; gap:10px;">
    <input type="text" name="q" value="<%= q %>" placeholder="Pesquisar clã..." />
    <button class="btn primary">Buscar</button>
  </form>


    <div class="actions">
      <a href="/cla/add" class="btn primary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 5a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H6a1 1 0 110-2h5V6a1 1 0 011-1z"/></svg>
        Adicionar Clã
      </a>
    </div>
  </div>

  <div class="table-wrap" style="margin-top:14px;">
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Fundador</th>
          <th>Influência</th>
          <th>Membros Notáveis</th>
          <th>Técnicas</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
       <% cla.forEach(cla => { %>
        <tr>
          <td><%= cla.nome %></td>
          <td><%= cla.fundador %></td>
          <td><%= cla.influencia %></td>
          <td><%= cla.membros %></td>
          <td><%= cla.tecnicas %></td>
          <td class="actions-cell">
  <a class="icon-btn" title="Editar" aria-label="Editar" href="/cla/edt/<%= cla._id %>">
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 20h9"/>
      <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z"/>
    </svg>
  </a>

  <a class="icon-btn" title="Excluir" aria-label="Excluir" 
     href="/cla/del/<%= cla._id %>" 
     onclick="return confirm('Excluir personagem?')">
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="3 6 5 6 21 6"/>
      <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6"/>
      <path d="M10 11v6"/>
      <path d="M14 11v6"/>
      <path d="M9 6V4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v2"/>
    </svg>
  </a>
</td>

        </tr>
      <% }) %>
       
      </tbody>
    </table>
  </div>
</section>

<%-include('../rodape.ejs')%>
