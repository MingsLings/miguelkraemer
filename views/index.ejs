<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Jujutsu Kaisen Wiki</title>
    <link rel="stylesheet" href="/styles.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #111;
            color: #f5f5f5;
            margin: 0;
        }
        header {
            background: #1b1b1b;
            padding: 20px;
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            border-bottom: 2px solid #444;
        }
        .container {
            width: 85%;
            margin: auto;
            padding: 30px 0;
        }
        h2 {
            margin-top: 50px;
            border-left: 4px solid #c62828;
            padding-left: 10px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .card {
            background: #1e1e1e;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #333;
        }
        .card img {
            width: 100%;
            border-radius: 6px;
            margin-bottom: 10px;
        }
        .card h3 {
            margin: 5px 0;
            color: #ff4d4d;
        }
        .card p {
            margin: 4px 0;
            font-size: 14px;
        }
    </style>
</head>
<body>

<header>Jujutsu Kaisen — Wiki</header>

<div class="container">

    <!-- ============================
         FEITICEIROS
    ============================= -->
    <h2>Feiticeiros</h2>
    <div class="grid">
        <% feiticeiros.forEach(f => { %>
            <div class="card">
                <img src="<%= f.foto %>" alt="<%= f.nome %>">
                <h3><%= f.nome %></h3>
                <p><strong>Técnica:</strong> <%= f.tecnica %></p>
                <p><strong>Estilo:</strong> <%= f.estilo %></p>
                <p><strong>Grau:</strong> <%= f.grau %></p>
                <p><strong>Status:</strong> <%= f.status %></p>
            </div>
        <% }) %>
    </div>

    <!-- ============================
         TÉCNICAS
    ============================= -->
    <h2>Técnicas</h2>
    <div class="grid">
        <% tecnicas.forEach(t => { %>
            <div class="card">
                <h3><%= t.nome %></h3>
                <p><strong>Usuário:</strong> <%= t.usuario %></p>
                <p><strong>Complexidade:</strong> <%= t.complexidade %></p>
                <p><strong>Capacidades:</strong> <%= t.capacidades %></p>
                <p><strong>Descrição:</strong> <%= t.descricao %></p>
            </div>
        <% }) %>
    </div>

    <!-- ============================
         CLÃS
    ============================= -->
    <h2>Clãs</h2>
    <div class="grid">
        <% clas.forEach(c => { %>
            <div class="card">
                <h3><%= c.nome %></h3>
                <p><strong>Fundador:</strong> <%= c.fundador %></p>
                <p><strong>Influência:</strong> <%= c.influencia %></p>
                <p><strong>Membros:</strong> <%= c.membros %></p>
                <p><strong>Técnicas:</strong> <%= c.tecnicas %></p>
            </div>
        <% }) %>
    </div>

    <!-- ============================
         MALDIÇÕES
    ============================= -->
    <h2>Maldições</h2>
    <div class="grid">
        <% maldicoes.forEach(m => { %>
            <div class="card">
                <h3><%= m.nome %></h3>
                <p><strong>Técnica:</strong> <%= m.tecnica %></p>
                <p><strong>Espécie:</strong> <%= m.especie %></p>
                <p><strong>Grau:</strong> <%= m.grau %></p>
            </div>
        <% }) %>
    </div>

</div>

</body>
</html>
