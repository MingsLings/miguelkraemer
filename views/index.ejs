<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Jujutsu Kaisen Wiki</title>
    <link rel="stylesheet" href="/styles.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #111;
            color: #f5f5f5;
            margin: 0;
        }
        header {
            background: #1b1b1b;
            padding: 20px;
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            border-bottom: 2px solid #444;
        }
        .container {
            width: 85%;
            margin: auto;
            padding: 30px 0;
        }
        h2 {
            margin-top: 50px;
            border-left: 4px solid #c62828;
            padding-left: 10px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .card {
            background: #1e1e1e;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #333;
        }
        .card img {
            width: 100%;
            border-radius: 6px;
            margin-bottom: 10px;
        }
        .card h3 {
            margin: 5px 0;
            color: #ff4d4d;
        }
        .card p {
            margin: 4px 0;
            font-size: 14px;
        }
    </style>
</head>
<body>

<header>Jujutsu Kaisen</header>

<p>Feiticeiros no backend: <%= JSON.stringify(feiticeiros) %></p>
<p>Técnicas no backend: <%= JSON.stringify(tecnicas) %></p>
<p>Clãs no backend: <%= JSON.stringify(clas) %></p>
<p>Maldições no backend: <%= JSON.stringify(maldicoes) %></p>


<div class="container">
    <h2>Feiticeiros</h2>
    <div class="grid">
        <% feiticeiros.forEach(feiticeiro => { %>
            <div class="card">
                <img src="<%= feiticeiro.foto %>" alt="<%= feiticeiro.nome %>">
                <h3><%= feiticeiro.nome %></h3>
                <p><strong>Técnica:</strong> <%= feiticeiro.tecnica %></p>
                <p><strong>Estilo:</strong> <%= feiticeiro.estilo %></p>
                <p><strong>Grau:</strong> <%= feiticeiro.grau %></p>
                <p><strong>Status:</strong> <%= feiticeiro.status %></p>
            </div>
        <% }) %>
    </div>

    <h2>Técnicas</h2>
    <div class="grid">
        <% tecnicas.forEach(tecnica => { %>
            <div class="card">
                <h3><%= tecnica.nome %></h3>
                <p><strong>Usuário:</strong> <%= tecnica.usuario %></p>
                <p><strong>Complexidade:</strong> <%= tecnica.complexidade %></p>
                <p><strong>Capacidades:</strong> <%= tecnica.capacidades %></p>
                <p><strong>Descrição:</strong> <%= tecnica.descricao %></p>
            </div>
        <% }) %>
    </div>

    <h2>Clãs</h2><p>Feiticeiros no backend: <%= JSON.stringify(feiticeiros) %></p>
<p>Técnicas no backend: <%= JSON.stringify(tecnicas) %></p>
<p>Clãs no backend: <%= JSON.stringify(clas) %></p>
<p>Maldições no backend: <%= JSON.stringify(maldicoes) %></p>

    <div class="grid">
        <% clas.forEach(cla => { %>
            <div class="card">
                <h3><%= cla.nome %></h3>
                <p><strong>Fundador:</strong> <%= cla.fundador %></p>
                <p><strong>Influência:</strong> <%= cla.influencia %></p>
                <p><strong>Membros:</strong> <%= cla.membros %></p>
                <p><strong>Técnicas:</strong> <%= cla.tecnicas %></p>
            </div>
        <% }) %>
    </div>

    <h2>Maldições</h2>
    <div class="grid">
        <% maldicoes.forEach(maldicao => { %>
            <div class="card">
                <h3><%= maldicao.nome %></h3>
                <p><strong>Técnica:</strong> <%= maldicao.tecnica %></p>
                <p><strong>Espécie:</strong> <%= maldicao.especie %></p>
                <p><strong>Grau:</strong> <%= maldicao.grau %></p>
            </div>
        <% }) %>
    </div>

</div>

</body>
</html>
