     <%-include('../cabecalho.ejs')%>
     <header>
        <h3>Adicionar Nova Maldição</h3>
      </header>
      <div class="content">
        <form id="form-maldicao" autocomplete="off" action="/maldicao/add/ok" method="post">
          <div class="grid">

            <div>
              <label for="nome">Nome da Maldição</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: Dagon" required>
            </div>
            <div>
              <label for="tecnica">Técnica</label>
              <input id="tecnica" name="tecnica" type="text" placeholder="Ex: Marés do Desastre" required>
            </div>
           <div>
              <label for="especie">Espécie</label>
              <input id="especie" name="especie" type="text" placeholder="Ex: Espírito Vingativo" required>
            </div>
            <div>
              <label for="grau">Grau</label>
              <select id="grau" name="grau" required>
            <option value="" disabled selected>Selecione uma opção</option>
            <option>Grau 4</option>
            <option>Grau 3</option>
            <option>Grau 2</option>
            <option>Grau 1</option>
            <option>Grau Especial</option>
              </select>
            </div>
            <div>
              <label for="status">Status</label>
              <input id="status" name="status" type="text" placeholder="Ex: Vivo" required>
            </div>
    
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/maldicao/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Maldição</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>