<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <title>Acesso Amaldiçoado</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <style>
    /* fundo e olhos */
    .eyes-bg {
      position: fixed;
      inset: 0;
      background-image: url('/images/oio.jpg');
      background-size: 220px 220px;
      background-repeat: repeat;
      opacity: 0.12;
      animation: moveEyes 25s linear infinite;
      z-index: 0;
      filter: contrast(120%) saturate(80%);
    }

    @keyframes moveEyes {
      from { background-position: 0 0; }
      to   { background-position: 1000px 1000px; }
    }

    /* layout do container */
    body {
  margin: 0;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #070707 0%, #0f0606 100%);
  overflow: hidden;
}



    .box {
  width: 90%;
  max-width: 380px;
  position: relative;
  z-index: 2;
}

    .kanji { font-size: 56px; color: #e53935; margin-bottom: 6px; }
    h1 { color: #ff6b6b; margin: 0 0 6px 0; letter-spacing: 2px; }
    p.lead { color: #bdbdbd; margin-top: 6px; font-size: 13px; }

    input[type="password"] {
      width: 100%;
      padding: 12px;
      margin-top: 16px;
      border-radius: 8px;
      border: 1px solid #333;
      background: #0f0f0f;
      color: #ff8a8a;
      font-size: 16px;
      outline: none;
    }

    button {
      width: 100%;
      padding: 12px;
      margin-top: 14px;
      border-radius: 8px;
      border: none;
      background: #c62828;
      color: #fff;
      font-size: 15px;
      cursor: pointer;
    }

    .error {
      color: #ff7b7b;
      margin-top: 12px;
      display: none;
      font-size: 14px;
    }

    /* tremor */
    @keyframes shake {
      0% { transform: translate(0); }
      20% { transform: translate(-10px, 0); }
      40% { transform: translate(10px, 0); }
      60% { transform: translate(-8px, 0); }
      80% { transform: translate(8px, 0); }
      100% { transform: translate(0); }
    }
    .shake { animation: shake 0.45s; }

    /* efeito extra quando 3 erros */
    .flash-red {
      animation: flash 0.9s;
    }
    @keyframes flash {
      0% { background: rgba(255,0,0,0.0); }
      25% { background: rgba(255,0,0,0.25); }
      50% { background: rgba(255,0,0,0.5); }
      75% { background: rgba(255,0,0,0.25); }
      100% { background: rgba(255,0,0,0.0); }
    }
  </style>
</head>
<body>

  <!-- OLHOS NO FUNDO -->
  <div class="eyes-bg" aria-hidden="true"></div>

  <!-- CAIXA PRINCIPAL -->
  <div class="box" role="main" aria-label="Área de Login">
    <div class="kanji">呪</div>
    <h1>ACESSO RESTRITO</h1>
    <p class="lead">Digite a senha amaldiçoada para entrar...</p>

    <input id="senha" type="password" placeholder="Senha">
    <button id="btn-senha">Entrar</button>

    <div id="error" class="error">Senha incorreta... algo está observando você.</div>
  </div>

  <!-- ÁUDIO: sua música e som de erro (opcional) -->
  <!-- música ambiente (loop) -->
  <audio id="music" loop preload="auto">
    <source src="/sounds/musgamagabra.mp3" type="audio/mpeg">
  </audio>

  <!-- som de erro (curto) - se quiser usar outro arquivo coloque em /public/sounds -->
  <audio id="erro-som" preload="auto">
    <source src="/sounds/erro-short.mp3" type="audio/mpeg">
  </audio>

  <!-- som especial após 3 erros -->
<audio id="som-maldito" preload="auto">
  <source src="/sounds/sommaldito.mp3" type="audio/mpeg">
</audio>

<!-- som de piada (senha secreta) -->
<audio id="som-ruim" preload="auto">
  <source src="/sounds/somruim.mp3" type="audio/mpeg">
</audio>


  <script>
    // --- CONFIGURAÇÃO ---
    const SENHA_CORRETA = "bolinhadegolf"; // altere aqui para sua senha
    const SENHA_PIADA = "67"; // pode mudar pro que quiser
    const TENTATIVAS_MAX = 3;

    // --- ELEMENTOS ---
    const inputSenha = document.getElementById("senha");
    const btn = document.getElementById("btn-senha");
    const errorBox = document.getElementById("error");
    const music = document.getElementById("music");
    const erroSom = document.getElementById("erro-som");
    const somMaldito = document.getElementById("som-maldito");
    const somRuim = document.getElementById("som-ruim");
    let tentativas = 0;
    let musicaAutorizada = false;

    // Ao primeiro clique do usuário na página, autorizamos a música ambiente (política dos navegadores)
    document.addEventListener("click", function autorizaAudio() {
      if (!musicaAutorizada) {
        try {
          music.volume = 0.12;
          music.play().catch(()=>{/* autoplay pode falhar, tudo bem */});
        } catch(e) { /* ignore */ }
        musicaAutorizada = true;
      }
      // remover o listener após a primeira interação
      document.removeEventListener("click", autorizaAudio);
    }, { once: true });

    // função que toca o som de erro (só tocará se o usuário já teve alguma interação)
    function tocarErro() {
      if (!musicaAutorizada) return; // evita erro se o usuário nunca clicou
      if (!erroSom) return;
      try {
        erroSom.currentTime = 0;
        erroSom.volume = 0.8;
        erroSom.play().catch(()=>{/* ignore */});
      } catch(e) {}
    }

    function tremerTela() {
      document.body.classList.add("shake");
      setTimeout(()=>document.body.classList.remove("shake"), 450);
    }

        function tocarMaldito() {
  if (!musicaAutorizada) return;
  if (!somMaldito) return;

  const AudioContext = window.AudioContext || window.webkitAudioContext;
  const audioCtx = new AudioContext();

  const fonte = audioCtx.createMediaElementSource(somMaldito);

  // === DISTORÇÃO ===
  const distorcer = audioCtx.createWaveShaper();
  function makeDistortionCurve(amount) {
    let n_samples = 44100,
        curve = new Float32Array(n_samples),
        deg = Math.PI / 180;
    for (let i = 0; i < n_samples; ++i) {
      let x = i * 2 / n_samples - 1;
      curve[i] = (3 + amount) * x * 20 * deg / (Math.PI + amount * Math.abs(x));
    }
    return curve;
  }
  distorcer.curve = makeDistortionCurve(800);
  distorcer.oversample = "4x";

  // === ECO ===
  const delay = audioCtx.createDelay();
  delay.delayTime.value = 0.45;

  const feedback = audioCtx.createGain();
  feedback.gain.value = 0.6;

  delay.connect(feedback);
  feedback.connect(delay);

  // === FILTRO SOMBRIO ===
  const filtro = audioCtx.createBiquadFilter();
  filtro.type = "bandpass";
  filtro.frequency.value = 1200;
  filtro.Q.value = 1;

  fonte
    .connect(distorcer)
    .connect(filtro)
    .connect(delay)
    .connect(audioCtx.destination);

  fonte.connect(audioCtx.destination); // som original junto

  somMaldito.currentTime = 0;
  somMaldito.volume = 1;
  somMaldito.play();
}

function tocarSomRuim() {
  if (!musicaAutorizada) return;
  if (!somRuim) return;

  try {
    somRuim.currentTime = 0;
    somRuim.volume = 1.0;
    somRuim.play().catch(()=>{});
  } catch(e) {}
}


    function efeitoTresErros() {
      // flash vermelho e redirecionamento opcional, fique à vontade para editar
      document.body.classList.add("flash-red");
      tocarMaldito();
      setTimeout(()=>document.body.classList.remove("flash-red"), 900);
      // aqui você poderia, por exemplo, mostrar uma imagem grande:
      // window.location.href = '/maldicao/lst' // exemplo de redirecionamento
    }

    // lógica ao clicar no botão
    btn.addEventListener("click", function() {
  const valor = inputSenha.value ?? "";

  if (valor === SENHA_PIADA) {
    tocarSomRuim();
    document.body.classList.add("shake");

    setTimeout(() => {
      document.body.classList.remove("shake");
    }, 450);

    return;
  }

  if (valor === SENHA_CORRETA) {
    window.location.href = "/feiticeiro/lst";
    return;
  }

  // resto da lógica de erro normal
  tentativas++;
  errorBox.style.display = "block";
  tocarErro();
  tremerTela();

  if (tentativas >= TENTATIVAS_MAX) {
    efeitoTresErros();
    tentativas = 0;
  }
});

  </script>
</body>
</html>
